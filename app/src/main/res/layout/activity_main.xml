<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="ch.gislersoftware.calculator.MainActivity">

    <TextView
        android:id="@+id/firstInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/result" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="64sp"
        android:textColor="@color/colorText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstInput"
        app:layout_constraintBottom_toTopOf="@id/clear" />

    <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorClear"
        android:text="C"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintBottom_toTopOf="@id/number7"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onClearClick" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:src="@drawable/ic_outline_back"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/clear"
        app:layout_constraintRight_toLeftOf="@id/modulo"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintBottom_toTopOf="@id/number8"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onBackClick" />

    <Button
        android:id="@+id/modulo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="%"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/back"
        app:layout_constraintRight_toLeftOf="@id/divide"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintBottom_toTopOf="@id/number9"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onOperatorClick" />

    <Button
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="/"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/modulo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintBottom_toTopOf="@id/multiply"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onOperatorClick" />

    <Button
        android:id="@+id/number7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="7"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/number8"
        app:layout_constraintTop_toBottomOf="@id/clear"
        app:layout_constraintBottom_toTopOf="@id/number4"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/number8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="8"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number7"
        app:layout_constraintRight_toLeftOf="@id/number9"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintBottom_toTopOf="@id/number5"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/number9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="9"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number8"
        app:layout_constraintRight_toLeftOf="@id/multiply"
        app:layout_constraintTop_toBottomOf="@id/modulo"
        app:layout_constraintBottom_toTopOf="@id/number6"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="*"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divide"
        app:layout_constraintBottom_toTopOf="@id/minus"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onOperatorClick" />

    <Button
        android:id="@+id/number4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="4"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/number5"
        app:layout_constraintTop_toBottomOf="@id/number7"
        app:layout_constraintBottom_toTopOf="@id/number1"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/number5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="5"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number4"
        app:layout_constraintRight_toLeftOf="@id/number6"
        app:layout_constraintTop_toBottomOf="@id/number8"
        app:layout_constraintBottom_toTopOf="@id/number2"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/number6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="6"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number5"
        app:layout_constraintRight_toLeftOf="@id/minus"
        app:layout_constraintTop_toBottomOf="@id/number9"
        app:layout_constraintBottom_toTopOf="@id/number3"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="-"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/multiply"
        app:layout_constraintBottom_toTopOf="@id/plus"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onOperatorClick" />

    <Button
        android:id="@+id/number1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="1"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/number2"
        app:layout_constraintTop_toBottomOf="@id/number4"
        app:layout_constraintBottom_toTopOf="@id/invert"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/number2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="2"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number1"
        app:layout_constraintRight_toLeftOf="@id/number3"
        app:layout_constraintTop_toBottomOf="@id/number5"
        app:layout_constraintBottom_toTopOf="@id/number0"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/number3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="3"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number2"
        app:layout_constraintRight_toLeftOf="@id/plus"
        app:layout_constraintTop_toBottomOf="@id/number6"
        app:layout_constraintBottom_toTopOf="@id/decimal"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="+"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minus"
        app:layout_constraintBottom_toTopOf="@id/calculate"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onOperatorClick" />

    <Button
        android:id="@+id/invert"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="+/-"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/number0"
        app:layout_constraintTop_toBottomOf="@id/number1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onInvertClick" />

    <Button
        android:id="@+id/number0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonNumber"
        android:text="0"
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/invert"
        app:layout_constraintRight_toLeftOf="@id/decimal"
        app:layout_constraintTop_toBottomOf="@id/number2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onNumberClick" />

    <Button
        android:id="@+id/decimal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="."
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/number0"
        app:layout_constraintRight_toLeftOf="@id/calculate"
        app:layout_constraintTop_toBottomOf="@id/number3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onDecimalClick" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorButtonOperator"
        android:text="="
        android:textColor="@color/colorText"
        android:textSize="36sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/decimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="1"
        android:onClick="onCalculateClick" />
</androidx.constraintlayout.widget.ConstraintLayout>
